@inject AppDbContext AppDbContext

@model TambahVM

@{
    ViewData["Title"] = "Tambah | Balita";
    var daftarOrangTua = await AppDbContext.TblOrangTua.ToListAsync();
}


<h2 class="mb-3">Tambah Balita</h2>

<div class="card">
    <div class="card-body">


        <form asp-action="@nameof(BalitaController.Tambah)">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="@Model.NIK" class="form-control" placeholder="" />
                        <label asp-for="@Model.NIK"></label>
                        <span asp-validation-for="@Model.NIK"></span>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="@Model.Nama" class="form-control" placeholder="" />
                        <label asp-for="@Model.Nama"></label>
                        <span asp-validation-for="@Model.Nama"></span>
                    </div>
                </div>

                <div class="col-md-12 mb-3">
                    <label asp-for="@Model.JenisKelamin" class="form-label"></label> <br />
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="@Model.JenisKelamin" value="@JenisKelamin.LakiLaki" />
                        <label class="form-check-label" asp-for="@Model.JenisKelamin">Laki - Laki</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="@Model.JenisKelamin" value="@JenisKelamin.Perempuan" />
                        <label class="form-check-label" asp-for="@Model.JenisKelamin">Perempuan</label>
                    </div>
                    <span asp-validation-for="@Model.JenisKelamin"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="@Model.BeratBadanLahir" class="form-control" placeholder="" />
                        <label asp-for="@Model.BeratBadanLahir"></label>
                        <span asp-validation-for="@Model.BeratBadanLahir"></span>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="@Model.TinggiBadanLahir" class="form-control" placeholder="" />
                        <label asp-for="@Model.TinggiBadanLahir"></label>
                        <span asp-validation-for="@Model.TinggiBadanLahir"></span>
                    </div>
                </div>

                <div class="col-12 mb-3">
                    <label asp-for="@Model.OrangTuaId" class="form-label"></label>
                    <select class="form-control" asp-for="@Model.OrangTuaId">
                        <option value="@null">Pilih orang tua...</option>
                        @foreach(var orangTua in daftarOrangTua)
                        {
                            <option value="@orangTua.Id">@orangTua.Nama</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.OrangTuaId"></span>
                </div>

                <div class="col mb-3">
                    <button class="btn btn-primary">Tambah</button>
                </div>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}