@model TambahVM

@{
    ViewData["Title"] = "Kelurahan | Tambah";
}

<form asp-action="@nameof(KelurahanController.Tambah)">
    <div class="card">
        <div class="card-header">
            <h3>Tambah Kelurahan</h3>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="form-text text-danger"></div>

            <div class="col mb-3">
                <label asp-for="@Model.Nama" class="form-label"></label>
                <input asp-for="@Model.Nama" class="form-control" />
                <span asp-validation-for="@Model.Nama" class="form-text text-danger"></span>
            </div>

        </div>
        <div class="card-footer">
            <div class="col">
                <button class="btn btn-primary me-2">Simpan</button>
                <button class="btn btn-danger">Batal</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}